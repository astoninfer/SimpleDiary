<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_text_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.example.astoninfer.demo3.EditorActivity">
    <RelativeLayout
        android:id="@+id/edit_view_menu_bar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryDark"
        android:layout_height="44dp">
        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:textSize="15sp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:onClick="saveedit"
            android:gravity="center_horizontal|center_vertical"
            android:text="保存"
            android:textColor="@color/pure_white"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@+id/edit_view_menu_bar"
        android:id="@+id/edit_text_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <com.example.astoninfer.demo3.richeditor.RichEditor
            android:id="@+id/richEditor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:padding="10dp"
            android:layout_weight="1"
            android:layerType="software">
        </com.example.astoninfer.demo3.richeditor.RichEditor>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/WordFont"
            android:paddingBottom="0dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/Size1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="1"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"
                    />
                <Button
                    android:id="@+id/Size2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="2"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"
                    />
                <Button
                    android:id="@+id/Size3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="3"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"
                    />
                <Button
                    android:id="@+id/Size4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="4"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"
                    />
                <Button
                    android:id="@+id/Size5"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="5"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"
                    />
                <Button
                    android:id="@+id/Size6"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="6"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"
                    />
                <Button
                    android:id="@+id/Size7"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="7"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"
                    />
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/blue"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#0000ff" />
                    <Button
                        android:id="@+id/red"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#ff0000" />
                    <Button
                        android:id="@+id/white"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#fff" />
                    <Button
                        android:id="@+id/green"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#00ff00" />
                    <Button
                        android:id="@+id/black"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#000" />
                    <Button
                        android:id="@+id/gray"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#666" />
                    <Button
                        android:id="@+id/yellow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#ffff00" />
                    <Button
                        android:id="@+id/purple"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#ff34b3" />
                    <Button
                        android:id="@+id/brown"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#cd661d" />
                    <Button
                        android:id="@+id/lightblue"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#63B8FF" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/ViewPager_btns"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </android.support.v4.view.ViewPager>
    </LinearLayout>
</RelativeLayout>
