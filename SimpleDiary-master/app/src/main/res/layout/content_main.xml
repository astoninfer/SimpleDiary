<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.astoninfer.demo3.MainActivity"

    tools:showIn="@layout/activity_main">
    <RelativeLayout
        android:id="@+id/main_top_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/main_menu_above"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/main_add"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/main_album"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@color/pure_white"
                android:textSize="18sp"
                android:text="相册"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:clickable="true"/>
            <TextView
                android:id="@+id/main_record"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:text="@string/main_record_but"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:clickable="true"
                android:textColor="@color/pure_white"/>
            <com.example.astoninfer.demo3.RoundImageView
                android:id="@+id/main_figure"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_display_layout"
            android:layout_below="@+id/main_menu_above">
            <LinearLayout
                android:id="@+id/main_menu_below"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:id="@+id/main_date_layout"
                    android:orientation="horizontal"
                    android:clickable="true" >
                    <TextView
                        android:id="@+id/main_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="日历"
                        android:textColor="@color/pure_white"
                        android:textSize="14sp"
                        android:gravity="center_horizontal|center_vertical" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/main_location_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:clickable="true">
                    <TextView
                        android:id="@+id/main_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="位置"
                        android:textColor="@color/pure_white"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/main_blur_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_above="@id/main_menu_below">
            </LinearLayout>
        </RelativeLayout>

        <!-- note: this is a fragment -->
        <!--
        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:orientation="vertical"
            android:id="@+id/main_display_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/main_menu_below"
            android:layout_below="@id/main_menu_above">
        </LinearLayout>
        -->

    </RelativeLayout>
    <android.support.design.internal.ScrimInsetsFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:elevation="10dp"
        app:insetForeground="@color/colorPrimaryDark"
        android:fitsSystemWindows="true">
        <include layout="@layout/main_drawer_right_view" />
    </android.support.design.internal.ScrimInsetsFrameLayout>
</android.support.v4.widget.DrawerLayout>
