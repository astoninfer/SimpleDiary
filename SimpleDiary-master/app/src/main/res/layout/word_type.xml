<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/PopSeekBar"
        android:paddingBottom="40dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <SeekBar
                android:id="@+id/seekbar_size"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:thumb="@drawable/seekbar_oval"
                android:progressDrawable="@drawable/seekbar"
                android:maxHeight="1dp"
                android:max="100"
                android:progress="100"/>
            <TextView
                android:id="@+id/word_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="30"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>
            />
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/add_size"
                android:text="+"
                android:layout_marginTop="7dp"
                android:textSize="20sp"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/less_size"
                android:layout_marginTop="7dp"
                android:text="-"
                android:textSize="20sp"/>
        </LinearLayout>
        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!--<Button-->
                <!--android:id="@+id/choose_bgcolor"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_margin="20dp"-->
                <!--android:text="背景"-->
                <!--android:textSize="25sp"/>-->
            <!--<Button-->
                <!--android:id="@+id/choose_wordcolor"-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_margin="20dp"-->
                <!--android:text="字体"-->
                <!--android:textSize="25sp"/>-->
        <!--</LinearLayout>-->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal"
            android:fadeScrollbars="true"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/blue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#0000ff" />
                <Button
                    android:id="@+id/red"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#ff0000" />
                <Button
                    android:id="@+id/white"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#fff" />
                <Button
                    android:id="@+id/green"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#00ff00" />
                <Button
                    android:id="@+id/black"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_black"
                    android:backgroundTint="#000" />
                <Button
                    android:id="@+id/gray"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_gray"
                    android:backgroundTint="#666" />
                <Button
                    android:id="@+id/yellow"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_gray"
                    android:backgroundTint="#ffff00" />
                <Button
                    android:id="@+id/purple"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_gray"
                    android:backgroundTint="#ff34b3" />
                <Button
                    android:id="@+id/brown"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_gray"
                    android:backgroundTint="#cd661d" />
                <Button
                    android:id="@+id/lightblue"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_gray"
                    android:backgroundTint="#63B8FF" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>
