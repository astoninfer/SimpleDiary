<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:alpha="0.9"
        android:id="@+id/act_login_topmenu_ly"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        <Button
            android:id="@+id/act_login_register_ly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:background="@color/transparent"
            android:textSize="15sp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/light_grey" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="登录"
            android:gravity="center"
            android:textColor="@color/pure_white"
            android:textSize="17sp" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_line"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:showDividers="middle|end">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/act_login_phonenumber_ly"
            android:layout_height="56dp">

            <TextView
                android:id="@+id/act_login_phonenumber_info_ly"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="手机号码"
                android:textSize="16sp"
                android:gravity="center" />

            <EditText
                android:id="@+id/act_login_phonenumber_fill_ly"
                android:layout_weight="2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:inputType="phone"
                android:maxLines="1"
                android:background="@drawable/round_corner_box"
                android:maxLength="11"
                android:hint="your phone number"
                android:textStyle="italic"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/act_login_passwd_ly"
            android:layout_height="56dp">
            <TextView
                android:id="@+id/act_login_pwd_info_ly"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="密码"
                android:textSize="16sp"
                android:gravity="center" />

            <EditText
                android:id="@+id/act_login_pwd_fill_ly"
                android:layout_weight="2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:maxLength="20"
                android:hint="password"
                android:maxLines="1"
                android:textStyle="normal"
                android:background="@drawable/round_corner_box"
                android:inputType="textPassword"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/act_login_login_ly"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="50dp"
            android:background="@drawable/round_corner_btn_1"
            android:text="开始登录"
            android:textColor="@color/colorPrimary7"
            android:textSize="17sp"/>

    </LinearLayout>

</LinearLayout>