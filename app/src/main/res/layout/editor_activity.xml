<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_text_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    tools:context="com.example.jeylnastoninfer.debug7.daemonAct.EditorActivity">

    <RelativeLayout
        android:id="@+id/edit_view_menu_bar"
        android:layout_width="match_parent"
        android:background="@color/pseduo_trans"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/editor_act_save"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:text="保存"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:textColor="@color/pure_white"/>

        <TextView
            android:id="@+id/editor_act_abort"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:text="放弃更改"
            android:textColor="@color/light_clay_blue"
            android:layout_alignBaseline="@+id/editor_act_save"
            android:layout_alignBottom="@+id/editor_act_save"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:id="@+id/editor_act_show_edit_mode"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/editor_act_save"
            android:layout_toRightOf="@id/editor_act_abort"
            android:layout_width="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/editor_act_show_font_color"
                    android:layout_width="8dp"
                    android:background="@drawable/round_shape"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="8dp"
                    android:layout_weight="0"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:alpha=".5"
                    android:src="@drawable/ic_format_bold_white_24dp"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:id="@+id/editor_act_show_bold"/>
                <ImageView
                    android:id="@+id/editor_act_show_italic"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_format_italic_white_24dp"
                    android:layout_height="match_parent"
                    android:alpha=".5"
                    android:visibility="invisible"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/editor_act_show_underline"
                    android:src="@drawable/ic_format_underlined_white_24dp"
                    android:layout_width="0dp"
                    android:visibility="invisible"
                    android:layout_height="match_parent"
                    android:alpha=".5"
                    android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/editor_act_show_strikethrough"
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_strikethrough_s_white_24dp"
                    android:layout_height="match_parent"
                    android:alpha=".5"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="0dp"
                    android:textSize="15sp"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:layout_weight="1"
                    android:layout_gravity="right|center_vertical"
                    android:id="@+id/editor_act_show_font_sz"/>
                <TextView
                    android:textColor="@color/pure_white"
                    android:textSize = "10sp"
                    android:paddingLeft="4dp"
                    android:text="px"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="left|center_vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_height="0dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="15dp"
                    android:alpha=".5"
                    android:src="@drawable/ic_near_me_white_24dp"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/editor_act_show_location"
                    android:layout_weight="1"
                    android:alpha=".5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/edit_view_menu_bar"
        android:orientation="horizontal"
        android:id="@+id/edit_act_divide_line_1"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/proper_grey">
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_below="@id/edit_act_divide_line_1"
        android:id="@+id/edit_text_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <com.example.jeylnastoninfer.debug7.auxUtils.projectStructUtils.RichEditor
            android:id="@+id/richEditor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:layerType="software">
        </com.example.jeylnastoninfer.debug7.auxUtils.projectStructUtils.RichEditor>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/WordFont"
            android:paddingBottom="0dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:visibility="gone"
            android:background="@color/colorPrimary7"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/Size1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="1"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"
                    />
                <Button
                    android:id="@+id/Size2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="2"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"
                    />
                <Button
                    android:id="@+id/Size3"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="3"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"
                    />
                <Button
                    android:id="@+id/Size4"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="4"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"
                    />
                <Button
                    android:id="@+id/Size5"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="5"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"
                    />
                <Button
                    android:id="@+id/Size6"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="6"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"
                    />
                <Button
                    android:id="@+id/Size7"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="7"
                    android:textSize="20sp"
                    android:background="@drawable/oval_button"
                    android:backgroundTint="#EEEEEE"/>
            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/blue"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#0000ff" />
                    <Button
                        android:id="@+id/red"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#ff0000" />
                    <Button
                        android:id="@+id/white"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#fff" />
                    <Button
                        android:id="@+id/green"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#00ff00" />
                    <Button
                        android:id="@+id/black"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#000" />
                    <Button
                        android:id="@+id/gray"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#666" />
                    <Button
                        android:id="@+id/yellow"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#ffff00" />
                    <Button
                        android:id="@+id/purple"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#ff34b3" />
                    <Button
                        android:id="@+id/brown"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#cd661d" />
                    <Button
                        android:id="@+id/lightblue"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/oval_button"
                        android:backgroundTint="#63B8FF" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/ViewPager_btns"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        </android.support.v4.view.ViewPager>
    </LinearLayout>
</RelativeLayout>
