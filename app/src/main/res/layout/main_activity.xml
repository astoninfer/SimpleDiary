<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context="com.example.jeylnastoninfer.debug7.daemonAct.MainActivity">
    <RelativeLayout
        android:id="@+id/main_top_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/main_menu_above"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:showDividers="none"
            android:dividerPadding="10dp"
            android:divider="@drawable/divider_line_vertical"
            android:background="@color/colorPrimary"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/main_add"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:clickable="true"
                android:scaleType="fitCenter"/>
            <TextView
                android:id="@+id/main_album"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/pure_white"
                android:textSize="17sp"
                android:text="相册"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:clickable="true"/>
            <TextView
                android:id="@+id/main_record"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="@string/main_record_but"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_gravity="center_vertical"
                android:textColor="@color/pure_white"/>
            <com.example.jeylnastoninfer.debug7.RoundImageView
                android:id="@+id/main_figure"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal"
                android:clickable="true"/>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/main_header"
            android:layout_marginTop="50dp"
            android:layout_below="@id/main_menu_above"
            android:orientation="vertical"
            android:showDividers="middle"
            android:divider="@drawable/divider_line"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:textColor="@color/proper_grey"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:text="足迹地图"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"></LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main_display_layout"
            android:layout_below="@+id/main_header">
            <ImageView
                android:layout_marginTop="30dp"
                android:id="@+id/main_map"
                android:layout_width="match_parent"
                android:layout_height="250dp" />
        </ScrollView>

    </RelativeLayout>
    <android.support.design.internal.ScrimInsetsFrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:elevation="10dp"
        app:insetForeground="#4000"
        android:fitsSystemWindows="true">
        <include layout="@layout/main_drawer_right_view" />
    </android.support.design.internal.ScrimInsetsFrameLayout>
</android.support.v4.widget.DrawerLayout>