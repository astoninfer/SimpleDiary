<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="10dp"
    android:padding = "5dp">
    <LinearLayout
        android:id="@+id/record_info"
        android:background="@drawable/round_corner_btn_1"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:paddingLeft="10dp"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:id="@+id/record_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textSize="11sp"
                android:textColor="@color/proper_grey"
                android:gravity="center_vertical"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/record_location"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/proper_grey"
                android:textSize="11sp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:paddingLeft="5dp"
                android:id="@+id/record_item_img1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:paddingLeft="5dp"
                android:id="@+id/record_item_img2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <ImageView
                android:paddingLeft="5dp"
                android:id="@+id/record_item_img3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>